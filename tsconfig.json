{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es5",
        "declaration": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "es2015",
            "es2016"
          ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true
//        "noImplicitAny": true,
//        "strictNullChecks": true,
//        "noUnusedLocals": true
    },
    "include": [
        "src/swcwt"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}